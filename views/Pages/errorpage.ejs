<!DOCTYPE html>
<html>
<head>
<%include ../partials/head.ejs%>

    <STYLE>
        .zoom {
            transition: transform .2s; /* Animation */
            width: 2.5%;
        }

        .zoom:hover {
            transform: scale(6); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
            z-index: 1;
        }

    </STYLE>
</head>

<body class="w3-theme-l5">

<%include ../partials/header.ejs%>

    <div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">

        <%if (perror != ""){%>

        <h1 style="align-self: center"> <%=perror%> </h1>
        <%}else {%>
            <h1>Items you requested for trade</h1>

                <%var i = 0;  while(i < from_items.length){ %>
        <p>
                <h6>  <strong><%=from_items[i].to_name%>'s <%=from_items[i].from_item_name%></strong>
            &nbsp
            <img class="zoom" src="<%=from_items[i].from_pic_url%>" id="output" style="width: 50px; height: 50px; position: relative"/>


            &nbsp&nbsp
            for your
            <strong> <%=from_items[i].to_item_name%> </strong>
            <img class="zoom" src="<%=from_items[i].to_pic_url%>" id="output" style="width: 50px; height:50px; position: relative"/>
            you can contact them at <u><%=from_items[i].to_email%> </u>


        </h6> </p>
                <%i++}%>
        <br>




            <h1>Items you accepted for trade</h1>
                <%var i = 0;  while(i < to_items.length){ %>
                <p>
                <h6>  <strong><%=to_items[i].from_name%>'s <%=to_items[i].from_item_name%></strong>
                        at 
                         <u><%=to_items[i].from_email%> </u>
                &nbsp
                <img class="zoom" src="<%=to_items[i].from_pic_url%>" id="output" style="width: 50px;height:50px;position: relative"/>
                &nbsp&nbsp



            for your <strong> <%=to_items[i].to_item_name%> </strong>
            &nbsp
         </h6> </p>
                <%i++}%>


        <%}%>


    </div>


</body>
</html>
